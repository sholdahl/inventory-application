<%- include('header'); -%>
<div class="row">
    <div class="col-12">
        <h1 class="text-center m-4"><%=title%></h1>
    </div>
</div>


<div class="row item-detail-row">
    <div class="mb-3 col-12 col-lg-8 row m-auto">
        <h3 class="text-center">Are you sure you want to delete the category: <%=category.name%></h3>
    </div>
    <div class="text-center mb-3">
        <a href="<%=category.url%>" class="btn btn-light">
            Back to Category Details
        </a>
        <form action="" method="POST" class="delete-form">
            <button class="btn btn-danger" type="submit">
                <input type="hidden" name="categoryid" required='true' value="<%=category._id%>">
                Delete
            </button>
        </form>
    </div>

    <%- include('footer'); -%>